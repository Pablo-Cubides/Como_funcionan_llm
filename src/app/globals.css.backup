@tailwind base;
@tailwind components;
@tailwind utilities;
:root{
  --bg: #000000;
  --fg: #e6eaf0;
  --muted: #9aa3b2;
  --accent: #22c1c3;
  --glass: rgba(255,255,255,0.02);
  --card-radius: 1rem;
  --card-pad: 2rem;
}

html,body,#__next { height: 100%; }
body{ background: var(--bg); color: var(--fg); font-family: Inter, ui-sans-serif, system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; }

/* Big hero */
.app-shell{ min-height:100%; display:flex; flex-direction:column; }
.main-center{ flex:1; display:flex; align-items:center; justify-content:center; padding:3rem 1rem; }

.card { width:100%; max-width:980px; border-radius:var(--card-radius); background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01)); border:1px solid rgba(255,255,255,0.04); padding:var(--card-pad); box-shadow:0 20px 60px rgba(0,0,0,0.7); }
.card-header{ display:flex; align-items:center; justify-content:space-between; gap:1rem; margin-bottom:1rem; }
.brand{ display:flex; gap:1rem; align-items:center; }
.brand h1{ margin:0; font-weight:800; font-size:1.5rem; letter-spacing:-0.02em; }
.brand-sub{ color:var(--muted); font-size:.95rem }

.progress{ display:flex; gap:.5rem; align-items:center }
.progress .dot{ width:10px; height:10px; background:rgba(255,255,255,0.06); border-radius:9999px }
.progress .dot.active{ background:var(--accent); box-shadow:0 0 10px rgba(34,193,195,0.25); transform:scale(1.3) }

.title{ font-size:2rem; margin:0 0 .5rem 0; }
.subtitle{ color:var(--muted); margin:0 0 1rem 0 }

.controls{ display:flex; gap:1rem; align-items:center }
.btn{ background:linear-gradient(90deg,var(--accent), #7b61ff); color:#001; padding:.75rem 1.25rem; border-radius:.75rem; font-weight:700; border:none; cursor:pointer; box-shadow: 0 6px 24px rgba(34,193,195,0.12); }
.btn.secondary{ background:transparent; color:var(--fg); border:1px solid rgba(255,255,255,0.06); box-shadow:none }
.btn:disabled{ opacity:.45; cursor:not-allowed }

.section-body{ margin-top:1rem }
.token-row{ display:flex; gap:.5rem; flex-wrap:wrap }
.token{ padding:.4rem .7rem; border-radius:9999px; background:rgba(255,255,255,0.03); color:var(--fg); font-weight:700 }

/* responsive */
@media (max-width:640px){ .card{ padding:1.25rem } .title{ font-size:1.5rem } }

/* Responsive tweaks */
@media (max-width: 768px) {
  .token-chip {
    padding: 0.4rem 0.6rem;
    font-size: 0.95rem;
  }

  .navigation-button {
    padding: 0.6rem 1rem;
    font-size: 0.95rem;
  }

  .step-title {
    font-size: 2rem;
  }

  .step-description {
    font-size: 1rem;
  }
}

/* Make large matrices scroll horizontally on small screens */
.matrix-scroll {
  overflow-x: auto;
}
